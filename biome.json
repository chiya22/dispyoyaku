{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"ignore": ["public"]
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
		"quoteStyle": "single",
		"semicolons": "asNeeded"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"all": true
		}
	},
	"overrides": [
	{
		"include": [
			"next.config.js",
			"layout.tsx",
			"page.tsx",
			"loading.tsx",
			"error.tsx",
			"not-found.tsx"
		],
		"linter": {
			"rules": {
				"style": {
					"noUselessElse": "off",
					"noDefaultExport": "off"
				}
			}
		}
	}
	]
}